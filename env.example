# Environment Variables Template
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_NAME="ADmyBRAND AI Suite"
NEXT_PUBLIC_APP_URL="https://ai.admybrand.com"

# Contact Form (Optional - for server-side form handling)
CONTACT_FORM_EMAIL="hello@admybrand.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@admybrand.com"
SMTP_PASSWORD="your-app-password"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
